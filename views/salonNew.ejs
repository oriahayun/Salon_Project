<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Salon | New Salon</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.css"
        integrity="sha256-PF6MatZtiJ8/c9O9HQ8uSUXr++R9KBYu4gbNG5511WE=" crossorigin="anonymous" />
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto'>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/navbar.css">
</head>

<body>
    <header id="nav-wrapper">
        <nav id="nav">
            <div class="nav left">
                <span class="gradient skew">
                    <h1 class="logo un-skew">
                        <a href="/owner-dashboard">
                            BeautySN
                        </a>
                    </h1>
                </span>
                <button id="menu" class="btn-nav"><span class="fas fa-bars"></span></button>
            </div>
            <div class="nav right">
                <a href="/owner-dashboard" class="nav-link">
                    <span class="nav-link-span">
                        <span class="u-nav">Home</span>
                    </span>
                </a>
                <a href="/salons" class="nav-link active">
                    <span class="nav-link-span">
                        <span class="u-nav">Salons</span>
                    </span>
                </a>
                <a href="/appointments" class="nav-link">
                    <span class="nav-link-span">
                        <span class="u-nav">Appointments</span>
                    </span>
                </a>
                <a href="/logout" class="nav-link">
                    <span class="nav-link-span">
                        <span class="u-nav">Logout</span>
                    </span>
                </a>
            </div>
        </nav>
    </header>
    <main class="main-container">
        <div class="container py-5">
            <div class="card">
                <div class="card-header">
                    <h4>New Salon</h4>
                </div>
                <div class="card-body p-3">
                    <form class="needs-validation" action="/salons/new-salon" method="POST" enctype="multipart/form-data" novalidate>
                        <div id="MsgShow">
                        <% if (status=="success" ) { %>
                        <div class="alert alert-primary alert-dismissible fade show" role="alert">
                            <strong>
                                <%= message %>
                            </strong>
                        </div>
                        <% } else if (status=="error" ) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>
                                    <%= message %>
                                </strong>
                            </div>
                        <% } %>
                        </div>
                        <div class="d-flex justify-content-start align-items-center mb-3">
                            <div class="salon_image_box" id="salon_upload">
                                <input type="file" id="file_input" name="salon_file" accept=".png, .jpg, .jpeg" hidden>
                                <img src="/img/salon-img.png" alt="Salon Image" id="img">
                            </div>
                            <div class="d-flex flex-column align-items ml-4">
                                <div class="d-flex justify-content-start mb-4">
                                    <a href="javascript:void(0);" class="btn btn-secondary" onclick="resetAvatar()">RESET</a>
                                </div>
                                <div style="font-size: 12px; color: gray;">
                                    Allowed PNG or JPEG. Max size of 800K.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Salon Name</label>
                                    <input type="text" class="form-control" name="name"
                                        placeholder="Salon Name" required />
                                    <div class="invalid-feedback">
                                        Salon Name is required.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Location</label>
                                    <input type="text" class="form-control places-autocomplete"
                                        id="format_address" name="location" required />
                                    <input type="hidden" id="latitude" name="latitude">
                                    <input type="hidden" id="longitude" name="longitude">
                                    <div class="invalid-feedback">
                                        Location is required.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label">Description</label>
                                    <textarea type="text" class="form-control" rows="5" name="description"
                                        required></textarea>
                                    <div class="invalid-feedback">
                                        Description is required.
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="form-footer p-3">
                                <button type="submit" class="btn btn-primary btn-block">Submit</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>


    </main>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB4wDAFyAO2VssN5pRBuYMUKtcVhjD_2e8&libraries=places"></script>
    <script src='/js/validation.js'></script>
    <script src="/js/autocomplete.js"></script>
    <script>
        let uploadPart = document.getElementById("salon_upload");
        let hiddenPart = document.getElementById("file_input");
        uploadPart.addEventListener("click", function () {
            hiddenPart.click();
        });

        setTimeout(() => {
            $("#MsgShow").hide();
        }, "3000")

        uploadPart.addEventListener("change", function (e) {
            let img = document.getElementById("img");
            if (e.target.files && e.target.files[0]) {
                img.onload = () => {
                    URL.revokeObjectURL(img.src);
                };

                img.src = URL.createObjectURL(e.target.files[0]);
            }
        });

        function resetAvatar() {
            let img = document.getElementById("img");
            img.src = `/img/salon-img.png`;
        }
    </script>
</body>